# Reference Link: https://kube-vip.io/docs/usage/cloud-provider/#the-kube-vip-cloud-provider-configmap
apiVersion: v1
kind: ConfigMap
metadata:
  name: kubevip
  namespace: kube-system
data:
  {
{% for address in kubernetes_loadbalancer_addresses %}
{% for key, value in address.items() %}
   '{{ key }}': '{{ value }}',
{% endfor %}
{% endfor %}
  }